pipeline {
    agent any
 
    parameters {
        string(name: 'FOLDER1', defaultValue: '/tmp/source', description: 'Source folder path')
        string(name: 'FOLDER2', defaultValue: '/tmp/destination', description: 'Destination folder path')
        string(name: 'FILENAME', defaultValue: 'file.txt', description: 'File name to copy')
    }
 
    stages {
       stage('Stage1') {
            steps {
                echo "Setup"
            }
        }
        stage('Show Inputs') {
            steps {
                echo "Source Folder: ${params.FOLDER1}"
                echo "Destination Folder: ${params.FOLDER2}"
                echo "File to copy: ${params.FILENAME}"
            }
        }
 
        stage('Copy File') {
            steps {
                sh '''
                    echo "Copying file..."
                    cp "${FOLDER1}/${FILENAME}" "${FOLDER2}/"
                    echo "File copied successfully."
                '''
            }
        }
    }
}
